<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="id.sch.smktelkom_mlg.tugas01.xirpl4016.pizzahaha.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:weightSum="1">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="346dp"
            android:layout_above="@+id/textViewIdentitas"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:src="@drawable/header" />

        <TextView
            android:id="@+id/textViewIdentitas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:text="Identitas Pemesan"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#700101" />

        <TextView
            android:id="@+id/textViewNama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/imageView"
            android:layout_alignStart="@+id/imageView"
            android:layout_below="@+id/textViewIdentitas"
            android:text="Nama Pemesan"
            android:textColor="#c20f0f" />

        <EditText
            android:id="@+id/editTextNama"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/textViewNama"
            android:textColor="#bb8810" />

        <TextView
            android:id="@+id/textViewAlamat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Alamat Pengiriman"
            android:textColor="#c20f0f" />

        <EditText
            android:id="@+id/editTextAlamat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#bb8810" />

        <TextView
            android:id="@+id/textViewTelp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nomor Telepon Aktif"
            android:textColor="#c20f0f" />

        <EditText
            android:id="@+id/editTextTelp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:inputType="numberSigned"
            android:textColor="#bb8810" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewRincian"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Rincian Pesanan"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#700101" />

        <TextView
            android:id="@+id/textViewSize"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Size"
            android:textColor="#c20f0f" />

        <RadioGroup
            android:id="@+id/radioGroupSize"
            android:layout_width="235dp"
            android:layout_height="match_parent"
            android:weightSum="1">

            <RadioButton
                android:id="@+id/radioButtonS"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.26"
                android:checked="false"
                android:text="S"
                android:textColor="#bb8810" />

            <TextView
                android:id="@+id/textView9"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.26"
                android:text="(Rp35000,00)"
                android:textStyle="italic" />

            <RadioButton
                android:id="@+id/radioButtonM"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="M"
                android:textColor="#bb8810" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.26"
                android:text="(Rp55000,00)"
                android:textStyle="italic" />

            <RadioButton
                android:id="@+id/radioButtonL"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:checked="false"
                android:text="L"
                android:textColor="#bb8810" />

            <TextView
                android:id="@+id/textView11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1.26"
                android:text="(Rp.65000,00)"
                android:textStyle="italic" />
        </RadioGroup>

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Topping++"
            android:textColor="#c20f0f" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(Rp7000,00 per topping)"
            android:textStyle="italic" />

        <CheckBox
            android:id="@+id/checkBoxSosis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Sosis"
            android:textColor="#bb8810" />

        <CheckBox
            android:id="@+id/checkBoxMoza"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Mozarella"
            android:textColor="#bb8810" />

        <CheckBox
            android:id="@+id/checkBoxBeef"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:checked="false"
            android:text="Smoked Beef"
            android:textColor="#bb8810" />

        <TextView
            android:id="@+id/textView13"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textViewKurir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pilih Kurir"
            android:textColor="#c20f0f" />

        <Spinner
            android:id="@+id/spinnerJumlah"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:entries="@array/jumlah" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/buttonPesan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="#700101"
            android:text="PESAN"
            android:textColor="#bb8810" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Biaya perngiriman gratis" />

        <TextView
            android:id="@+id/textViewTotal"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:width="@dimen/abc_action_bar_subtitle_bottom_margin_material"
            android:textAlignment="center" />

    </LinearLayout>
</ScrollView>